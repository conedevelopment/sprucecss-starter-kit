{
    "name": "designing-in-the-browser-starter-kit",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "pug": "pug --obj pug/assets/data.json --watch pug/templates --out html/ --pretty",
        "sass": "sass --watch --no-source-map --update --style=expanded scss:css",
        "beautify": "js-beautify --type html --indent-size 4 --inline i,b,strong,span html/**/*.html",
        "browser-sync": "browser-sync start --server --startPath \"html/page/home.html\" --files \"**/*\" --directory --no-notify",
        "sass-lint": "stylelint scss/**/*.scss",
        "dev": "npm-run-all --parallel pug sass browser-sync"
    },
    "author": "Cone Development",
    "license": "MIT",
    "devDependencies": {
        "browser-sync": "^2.26.14",
        "js-beautify": "^1.13.5",
        "npm-run-all": "^4.1.5",
        "pug": "^3.0.2",
        "pug-cli": "^1.0.0-alpha6",
        "sass": "^1.32.8",
        "sass-lint": "^1.13.1",
        "stylelint": "^13.11.0",
        "stylelint-config-sass-guidelines": "^8.0.0"
    }
}
